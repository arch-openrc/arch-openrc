# Maintainer: DonVla <donvla@users.sourceforge.net>

pkgname=smartd-openrc
pkgver=1.0
pkgrel=1
pkgdesc="Open rc scripts for smartd (drforbin6@gmailcom)"
#arch=('i686' 'x86_64')
arch=('any')
url=""
license=('GPL')
depends=('openrc')

package() {
   mkdir -p ${pkgdir}/etc/init.d
   mkdir -p ${pkgdir}/etc/conf.d
   cp ../smartd.conf ${pkgdir}/etc/conf.d/smartd
   cp ../smartd.init ${pkgdir}/etc/init.d/smartd
}


