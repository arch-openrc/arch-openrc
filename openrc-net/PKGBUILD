package_samba-openrc() {
	pkgdesc="OpenRC samba init script"
	depends=('openrc' 'samba')
	backup=('etc/conf.d/smb')
	install=samba.install

	_inst_confd 'smb'
	_inst_initd 'smb'

	sed -e 's|/usr/sbin|/usr/bin|g' \
		-e 's/="samba"/="smb"/' \
		-i "${pkgdir}/etc/conf.d/smb"

	sed -e 's|/usr/sbin|/usr/bin|g' \
		-e 's/##samba/##smb/' \
		-e 's|"samba"|"smb"|' \
		-i "${pkgdir}/etc/init.d/smb"
}

