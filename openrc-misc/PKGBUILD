license=('GPL2')
groups=('openrc' 'openrc-misc')
makedepends=('alsa-utils' 'fcron' 'gpm' 'hdparm'
	    'laptop-mode-tools' 'openntpd' 'rsyslog'
	    'sane' 'virtualbox-guest-utils' 'xorg-server')
conflicts=('openrc-arch-services-git'
	  'initscripts' 'systemd-sysvcompat' 'openrc')

